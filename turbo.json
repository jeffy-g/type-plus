{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.tsx?", "!src/**/*.spec.tsx?", "!src/**/*.stories.tsx?", "tsconfig.*"],
			"outputs": ["lib/**"]
		},
		"build:doc": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		},
		"coverage": {
			"dependsOn": ["^build"],
			"inputs": ["ts/**/*.tsx?"]
		},
		"depcheck": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"nuke": {
			"cache": false
		},
		"size": {
			"dependsOn": ["build"]
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": ["ts/**/*.tsx?"]
		},
		"test:type": {
			"dependsOn": ["^build"],
			"inputs": ["ts/**/*.tsx?"]
		}
	}
}
